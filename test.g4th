include "std.g4th"

macro BUFFER_CAP 256 end

"Enter number of elements:\n" stdout write
BUFFER_CAP mem stdin read
"Enter elements\n" stdout write

0        // sum value
mem stoi // cnt value
over     // cnt value

mem
while over 0 > do
    BUFFER_CAP over stdin read
    dup dup stoi .
    1 +
    swap 1 -
    swap
end

drop drop

"Elements are:\n" stdout write

mem
// 0 cnt mem
while over 0 > do
    dup , 
    rot
    1 +
    swap 1 -
    swap
end
